<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymNet.Presentation.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Colores base -->
            <Color x:Key="ColorBackground">#020617</Color>
            <Color x:Key="ColorBackgroundCard">#0B1120</Color>
            <Color x:Key="ColorPrimary">#22C55E</Color>
            <Color x:Key="ColorAccent">#38BDF8</Color>
            <Color x:Key="ColorDanger">#EF4444</Color>
            <Color x:Key="ColorTextPrimary">#F9FAFB</Color>
            <Color x:Key="ColorTextMuted">#9CA3AF</Color>
            <Color x:Key="ColorDivider">#1F2933</Color>

            <!-- Estilo global de páginas -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource ColorBackground}" />
            </Style>

            <!-- Botón principal -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ColorPrimary}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="24" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Padding" Value="16,0" />
            </Style>

            <!-- Botón secundario / outline -->
            <Style x:Key="OutlinedButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="{StaticResource ColorPrimary}" />
                <Setter Property="BorderColor" Value="{StaticResource ColorPrimary}" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="CornerRadius" Value="24" />
                <Setter Property="HeightRequest" Value="44" />
                <Setter Property="Padding" Value="12,0" />
            </Style>

            <!-- Entradas de texto -->
            <Style x:Key="EntryStyle" TargetType="Entry">
                <Setter Property="TextColor" Value="{StaticResource ColorTextPrimary}" />
                <Setter Property="BackgroundColor" Value="#020617" />
                <Setter Property="PlaceholderColor" Value="{StaticResource ColorTextMuted}" />
                <Setter Property="HeightRequest" Value="44" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>




